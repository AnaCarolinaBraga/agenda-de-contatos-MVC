@model IEnumerable<AgendaDeContatosMVC.Models.Contact>

@{
    ViewData["Title"] = "IndexSearch";
}

<h1>Index</h1>

<p>
    <span class="text-end">Novo contato</span>
    <a asp-action="Create"><i class="bi bi-plus-square"></i></a>
</p>
<form class="d-flex">
        <input class="form-control me-sm-2" type="search" placeholder="Search" name="name">
        <button class="btn btn-secondary my-2 my-sm-0" asp-action="Index" type="submit">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <a asp-action="Create"><i class="bi bi-plus-square"></i></a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                 |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
